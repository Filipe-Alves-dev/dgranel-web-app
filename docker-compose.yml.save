services:
  backend-logistica:
    build: .
    ports:
      - "80:5000"
    volumes:
      - ./app:/app
    environment:
      - DB_HOST=db
      - DB_NAME=dgranel_db
      - DB_USER=admin
      - DB_PASSWORD=senha_segura_123
    depends_on:
      - db
    restart: always

  db:
    image: postgres:15-alpine
    environment:
      - POSTGRES_DB=dgranel_db
      - POSTGRES_USER=admin
      - POSTGRES_PASSWORD=senha_segura_123
    volumes:
      - postgres_data:/var/lib/postgresql/data
    restart: always
    ports:
      - "5432:5432"

volumes:
  postgres_data
